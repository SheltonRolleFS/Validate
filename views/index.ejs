*{
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

html{
    font-size: 62.5%;
}

body{
    font-family: "Roboto", sans-serif;
}

header{
    padding: 2rem;
    background-color: rgb(24, 24, 24);
}

nav{
    font-size: 2rem;
    color: white;
    text-align: right;
    font-weight: bold;
}

nav a{
    transition: all 200ms ease-in-out;
    cursor: pointer;
    text-decoration: none;
    color: white;
}

.container{
    max-width: 100rem;
    margin: 0 auto;
}

.hero{
    padding: 5rem 0;
}

h1{
    font-size: 6rem;
    width: 50%;
}

.success{
	position: absolute;
	top: 0;
	right: 0;
	background-color: red;
	padding: 10px;
	color: white;
}

.hero p{
    font-size: 2rem;
}

.cats{
    display: grid;
    grid-template-columns: 1fr 1fr 1fr 1fr;
    row-gap: 4rem;
    column-gap: 2rem;
    list-style: none;
    text-align: center;
    margin-top: 6rem;
}

.cats img{
    width: 10rem;
}

#signup{
	text-align: center;
	margin: 50px 0;
}

form{
    width: 600px;
    display: grid;
    grid-template-columns: 1fr 1fr;
    row-gap: 10px;
    column-gap: 10px;
    margin: 0 auto;
}

.bio{
    display: flex;
    flex-direction: column;
    grid-column: 1 / 3;
}

.consent{
    display: flex;
    align-items: center;
    grid-column: 1 / 3;
}

.consent p{
	margin-right: 10px;
}

.consent input{
	margin-right: 5px;
}
